---
export async function getStaticPaths() {
  return [{ params: { lang: "en" } }, { params: { lang: "es" } }];
}

import Layout from "../../layouts/Layout.astro";
import en from "../../i18n/en.json";
import es from "../../i18n/es.json";
import Header from "../../components/Header.astro";

// Get the current language from the parameters
const { params } = Astro;
const lang = params.lang || "en"; // Default to English
const translations = lang === "es" ? es : en;
---

<Layout title={translations["home.page.title"]} lang={lang}>
  <Header translation={translations} />
  <main class="blog-main-cnt"></main>
</Layout>

<style>
  .blog-main-cnt {
    height: 100vh;
  }
</style>
